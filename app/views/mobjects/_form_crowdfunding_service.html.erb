<script>
     $.fn.bootstrapSwitch.defaults.onColor = 'success';
     $("[name='my-checkbox1']").bootstrapSwitch('state',<%= true %>);
     $("[name='my-checkbox1']").on('switchChange.bootstrapSwitch', function () {
     $("#contract").prop('checked',$("[name='my-checkbox1']").bootstrapSwitch('state'));
     });
     $("[name='my-checkbox2']").bootstrapSwitch('state',<%= true %>);
     $("[name='my-checkbox2']").on('switchChange.bootstrapSwitch', function () {
     $("#payment").prop('checked',$("[name='my-checkbox2']").bootstrapSwitch('state'));
     });
     $("[name='my-checkbox3']").bootstrapSwitch('state',<%= true %>);
     $("[name='my-checkbox3']").on('switchChange.bootstrapSwitch', function () {
     $("#risk").prop('checked',$("[name='my-checkbox3']").bootstrapSwitch('state'));
     });
</script>

