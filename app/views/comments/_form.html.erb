    <%= form_for @comment do |f| %>

        <% if @comment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this rating from being saved:</h2>
              <ul>
                  <% @comment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <%= header("KOMMENTAR " + @comment.mobject.name) %>
        <div class="row">
              <div class="col-md-6">
                  <div class="panel-body">
                    <div class="form-group">
                      <%= f.text_area :description, rows: 5, class:"form-control"%>
                    </div>
                   <%= f.hidden_field :user_id, class:"form-control" %>
                   <%= f.hidden_field :mobject_id, class:"form-control" %>
                   <div class="actions">
                      <%= f.submit "Speichern",  class:"btn btn-primary btn-lg"%>
                      <%= link_to mobject_path(:id => @comment.mobject_id, :topic => "Blog") do %>
                        <i class="btn btn-default btn-lg">Abbrechen</i>
                      <% end %>
                   </div>
                </div>
            </div>
        </div>
    <% end %>
