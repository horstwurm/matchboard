                 <% end  %>
                 <br><br>
                
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <div>
                      <%= header((I18n.t :projekte), false) %>
                    </div>
                    <div id="auftragschartall"></div>
                  </div>
                </div>
  
                <% @mob = [] %>
                <div class="row">
