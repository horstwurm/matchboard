                    <% @mob << t.mobject_id %>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                      <div>
                        <%= header((I18n.t :projekte) + Mobject.find(t.mobject_id).name, false) %>
