  <%= form_for @mvdetail, html: {multipart: true}  do |f| %>
     <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading header">
                <li_header>
                <% if false %>
                <%= link_to mobject_path(:id => @mvdetail.mobject_id, :topic => "objekte_details") do %>
                  <i class="btn btn-primary glyphicon glyphicon-list"></i>
                <% end %>
                <% end %>
                  <%= I18n.t :details %><%= @mvdetail.mobject.name %>
                </li_header>
                </div>
                <div class="panel-body">
                  <% if @mvdetail.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@mvdetail.errors.count, "error") + " " + (I18n.t :notsaved) %></h2>
                      <ul>
                        <% @mvdetail.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                     <%= f.label (I18n.t :picture) + @mvdetail.video_file_name.to_s %><br/>
                     <%= image_tag @mvdetail.video.url(:medium) if @mvdetail.video_file_name %>
                  </div>
                  <div class="form-group">
                     <%= f.file_field :video, class:"form-control" %>
                  </div>
                  <br>
                  <div class="form-group">
                    <%= f.label I18n.t :bezeichnung %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label I18n.t :beschreibung %><br/>
                    <%= f.text_area :description, rows: 5, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label I18n.t :reihenfolge %><br/>
                    <%= f.number_field :sequence, class:"form-control"%>
                  </div>
                  <br>
                  <div>
                      <%= f.hidden_field :mobject_id, class:"form-control" %>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit (I18n.t :speichern), class:"btn btn-primary btn-lg"%>
            </div>
        </div>
      </div>
    </div>
  <% end %>

<script>
  document.addEventListener("turbolinks:load", function() {})
</script>