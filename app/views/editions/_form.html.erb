    <%= form_for @edition do |f| %>

        <% if @edition.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@edition.errors.count, "error") + " " + (I18n.t :notsaved) %></h2>
              <ul>
                  <% @edition.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading header">
                      <li_header>
                      <%= link_to mobject_path(:id => @edition.mobject_id, :topic => "objekte_ausgaben") do %>
                        <i class="btn btn-primary fa fa-list"></i>
                      <% end %>
                      <%= (I18n.t :ausgabe) + " " + @edition.mobject.name %>
                      </li_header>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel-body">
                      <div class="form-group">
                        <%= f.label (I18n.t :picture) %><br/>
                         <% if @edition.avatar_file_name %>
                             <%= image_tag @edition.avatar(:medium) %>
                         <% end %>
                        <%= f.file_field :avatar, class:"form-control" %>
                     </div>
                    <div class="form-group">
                      <%= f.label (I18n.t :ausgabe) %><br/>
                      <%= f.text_field :name, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label (I18n.t :datum) %><br/>
                      <%= f.text_field :release_date, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label (I18n.t :beschreibung) %><br/>
                      <%= f.text_area :description, rows: 5, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <input type="checkbox" name="my-checkbox1" checked>
                      <%= f.label (I18n.t :aktiv) %>
                    </div>
                     <%= f.check_box :active, :id => "active", class:"form-control hidden" %>
                     <%= f.hidden_field :mobject_id, class:"form-control" %>
                     <%= f.hidden_field :status, class:"form-control" %>
                    <div class="actions">
                       <%= f.submit (I18n.t :speichern),  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
                
            </div>
        </div>
    <% end %>                

<script type="text/javascript">
  $(document).ready(function(){
    $('#edition_release_date').datepicker({
        format: "yyyy-mm-dd",
        weekStart: 1,
        language: "en",
        daysOfWeekHighlighted: "0,6",
        todayBtn: true,
        todayHighlight: true,
        firstDay: 1}
    );
     $.fn.bootstrapSwitch.defaults.onColor = 'success';
     $("[name='my-checkbox1']").bootstrapSwitch('state',<%= @edition.active %>);
     $("[name='my-checkbox1']").on('switchChange.bootstrapSwitch', function () {
     $("#active").prop('checked',$("[name='my-checkbox1']").bootstrapSwitch('state'));
     });
  });
</script>

<script>
  document.addEventListener("turbolinks:load", function() {$document.ready()})
</script>
