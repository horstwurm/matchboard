  <%= form_for @price do |f| %>
     <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading header">
                <li_header>
                <%= link_to mobject_path(:id => @price.mobject_id, :topic => :preise) do %>
                  <i class="btn btn-primary glyphicon glyphicon-list"></i>
                <% end %>
                  <%= (I18n.t :preis) + " " + @price.mobject.name %>
                </li_header>
                </div>
                <div class="panel-body">
                  <% if @price.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@price.errors.count, "error") + (I18n.t :notsaved) %> </h2>
                      <ul>
                        <% @price.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <preis><%= @price.sequence %>.</preis><%= f.label (I18n.t :preis) %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label (I18n.t :beschreibung) %><br/>
                    <%= f.text_area :description, rows: 5, class:"form-control"%>
                  </div>
                  <div class="form-group">
                     <%= f.file_field :avatar, class:"form-control" %>
                  </div>
                      <%= f.hidden_field :mobject_id, class:"form-control" %>
                      <%= f.hidden_field :sequence, class:"form-control" %>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit "Speichern", class:"btn btn-primary btn-lg"%>
            </div>
        </div>
      </div>
    </div>
  <% end %>

<script>
  document.addEventListener("turbolinks:load", function() {})
</script>