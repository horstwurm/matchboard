  <%= form_for @dataloader, html: {multipart: true}  do |f| %>
     <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading header">
                <li_header>
                <%= link_to dataloaders_path do %>
                  <i class="btn btn-primary glyphicon glyphicon-list"></i>
                <% end %>
                  <%= I18n.t :dataloads %><%= @dataloader.name %>
                </li_header>
                </div>
                <div class="panel-body">
                  <% if @dataloader.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@dataloader.errors.count, "error") + " " + (I18n.t :notsaved) %></h2>
                      <ul>
                        <% @dataloader.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label I18n.t :kategorie %>
                        <%= f.collection_select :mcategory_id, Mcategory.where('ctype=?',"dataloads").order(:name), :id, :name, {}, :readonly => true, class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label I18n.t :bezeichnung %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                     <%= f.label (I18n.t :dokument) + " " + @dataloader.document_file_name.to_s %><br/>
                  </div>
                  <div class="form-group">
                     <%= f.file_field :document, class:"form-control" %>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit (I18n.t :speichern), class:"btn btn-primary btn-lg"%>
            </div>
        </div>
      </div>
    </div>
  <% end %>

<script>
  document.addEventListener("turbolinks:load", function() {})
</script>