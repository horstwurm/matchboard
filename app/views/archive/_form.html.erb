  <%= form_for @criteria do |f| %>
     <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading header">
                <li_header>
                <%= link_to mobject_path(:id => @criteria.mobject_id, :topic => "objekte_bewertungskriterien") do %>
                  <i class="btn btn-primary fa fa-list"></i>
                <% end %>
                  DETAILS <%= @criteria.mobject.name %>
                </li_header>
                </div>
                <div class="panel-body">
                  <% if @criteria.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@criteria.errors.count, "error") %> prohibited this workorder from being saved:</h2>
                      <ul>
                        <% @criteria.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label "Bezeichnung" %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label "Beschreibung" %><br/>
                    <%= f.text_area :description, rows: 5, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label "Gewichtung" %><br/>
                    <div class="form-group">
                      <input id="ex2" data-slider-id='ex2Slider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="<%= @criteria.rating %>"/>
                    </div>

                  </div>
                      <%= f.hidden_field :mobject_id, class:"form-control" %>
                      <%= f.number_field :rating, :id => "rating", class:"form-control hidden"%>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit "Speichern", class:"btn btn-primary btn-lg"%>
            </div>
        </div>
      </div>
    </div>
  <% end %>

<script>
$("#ex2").slider({});
$("#ex2").on("slide", function(slideEvt) {
	$("#rating").val(slideEvt.value);
	init_map(slideEvt.value)
});
</script>

<script>
  document.addEventListener("turbolinks:load", function() {})
</script>