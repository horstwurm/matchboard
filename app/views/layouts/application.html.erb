<% end %>
<% $usemailgun = true %>
<% init_apps %>
<% $switch_color = "#ACC550" %>
<% $app_name = "myTGCloud" %>
<% I18n.locale = :de %>

<!DOCTYPE html>
<html>
  <head>
    <title>TGCloud Plattform</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAP0PoTXZAKRi5IO3fM5yRO39puZPiR0iw"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <% if false %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:400,300|Raleway:300,400,900,700italic,700,300,600">
    <% end %>
    <% if true %>
    <link rel="stylesheet" type="text/css" href="../app/vendor/assets/stylesheets/jquery.bxslider.css">
    <link rel="stylesheet" type="text/css" href="../app/vendor/assets/stylesheets/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../app/vendor/assets/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../app/vendor/assets/stylesheets/animate">
    <link rel="stylesheet" type="text/css" href="../app/vendor/assets/stylesheets/style.css">
    <% end %>

  </head>
  
  <body>

  <!--ganzer Bildschirm fÃ¼r digital signage-->
  <% if (controller_name == "home" and action_name == "index18") %> 
    <%= yield %>
  <% else %>

    <div class="loader"></div>
    <div id="myDiv">
  
      <%= render 'layouts/header' %>
  
      <%= yield %>
  
      <% if false %>
      <%= render 'layouts/feature' %>
  
      <%= render 'layouts/myservices' %>
  
      <%= render 'layouts/service' %>
  
      <%= render 'layouts/portfolio' %>
  
      <%= render 'layouts/testimonial' %>
  
      <%= render 'layouts/blog' %>
  
      <%= render 'layouts/contact' %>
      <% end %>
  
      <% flash.each do |name, msg| %>
        <% content_tag(:div, msg, class:"alert alert-warning") %>
        <div id="snackbar"><%= msg %></div>
      <% end %>
  
    </div>
    </div>
  <% end %>

  <% if false %>
    <%= render 'layouts/header' %>
    
    <div class='container-fluid testcontainer'>
        <% flash.each do |name, msg| %>
          <% content_tag(:div, msg, class:"alert alert-warning") %>
          <div id="snackbar"><%= msg %></div>
        <% end %>

        <!--<% render 'layouts/advertise' %>-->

        <%= yield %>

    </div>
    <%= render 'layouts/footer' %>
    
  <% end %>

  </body>
</html>


<% if flash and flash.count>0 %>
  <script>
  function myFunction() {
      var x = document.getElementById("snackbar")
      x.className = "show";
      setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
  }
  myFunction();
  </script>
<% end %>

<% if false %>
<script src="../javascripts/jquery.min.js"></script>
<script src="../javascripts/jquery.easing.min.js"></script>
