  <% $appurl = "mytgcloud.herokuapp.com" %>
<% end %>
<% $usemailgun = true %>
<% init_apps %>
<% $switch_color = "#ACC550" %>
<% $app_name = "myTGCloud" %>
<% I18n.locale = :de %>

<!DOCTYPE html>
<html>
  <head>
    <title>TGCloud Plattform</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAP0PoTXZAKRi5IO3fM5yRO39puZPiR0iw"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:400,300|Raleway:300,400,900,700italic,700,300,600">

  </head>
  
  <body>

  <div class="loader"></div>
  <div id="myDiv">

    <%= render 'layouts/header' %>

    <%= yield %>

    <%= render 'layouts/feature' %>

    <%= render 'layouts/myservices' %>

    <%= render 'layouts/service' %>

    <%= render 'layouts/portfolio' %>

    <%= render 'layouts/testimonial' %>

    <%= render 'layouts/blog' %>

    <%= render 'layouts/contact' %>

    <% flash.each do |name, msg| %>
      <% content_tag(:div, msg, class:"alert alert-warning") %>
      <div id="snackbar"><%= msg %></div>
    <% end %>

  </div>


  <% if false %>
    <%= render 'layouts/header' %>
    
    <div class='container-fluid testcontainer'>
        <% flash.each do |name, msg| %>
          <% content_tag(:div, msg, class:"alert alert-warning") %>
          <div id="snackbar"><%= msg %></div>
        <% end %>

        <!--<% render 'layouts/advertise' %>-->

        <%= yield %>

    </div>
    <%= render 'layouts/footer' %>
    
  <% end %>

  </body>
</html>

<% if false %>
<link rel="stylesheet" type="text/css" href="../assets/stylesheets/jquery.bxslider.css">
<link rel="stylesheet" type="text/css" href="../assets/stylesheets/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="../assets/stylesheets/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="../assets/stylesheets/animate.css">
<link rel="stylesheet" type="text/css" href="../assets/stylesheets/style.css">
<% end %>

<% if flash and flash.count>0 %>
  <script>
  function myFunction() {
      var x = document.getElementById("snackbar")
      x.className = "show";
      setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
  }
  myFunction();
  </script>
<% end %>

<% if false %>
<script src="../assets/javascripts/jquery.min.js"></script>
<script src="../assets/javascripts/jquery.easing.min.js"></script>
<script src="../app/assets/javascripts/bootstrap.min.js"></script>
