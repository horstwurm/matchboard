    <%= form_for @question, html: {multipart: true}  do |f| %>

        <% if @question.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@question.errors.count, "error") + " " + (I18n.t :notsaved) %></h2>
              <ul>
                  <% @question.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <%= header(@question.mobject.mtype.upcase) %>

        <div class="row">
            <div class="col-md-6">
              <div class="panel-body">
                <div class="form-group">
                  <%= f.label (I18n.t :frage) %><br/>
                  <%= f.text_field :name, autofocus: true, class:"form-control"%>
                </div>
                <div class="form-group">
                  <%= f.label (I18n.t :beschreibung) %><br/>
                  <%= f.text_area :description, rows: 5, class:"form-control"%>
                </div>
                
                <div class="form-group">
                      <%= f.collection_select :mcategory_id, Mcategory.where('ctype=?',"fragetyp").order(:name), :id, :name, {}, :readonly => true, class:"form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label "Reihenfolge" %><br/>
                  <%= f.number_field :sequence, class:"form-control"%>
                </div>
                <%= f.hidden_field :mobject_id, class:"form-control" %>
                <div class="actions">
                   <%= f.submit "Speichern",  class:"btn btn-primary btn-lg"%>
                  <%= link_to mobject_path(:id => @question.mobject_id, :topic => "objekte_fragen") do %>
                    <i class="btn btn-default btn-lg">Abbrechen</i>
                  <% end %>
                </div>
              </div>
          </div>
                
        </div>
    </div>
<% end %>                
