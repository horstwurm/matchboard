  <%= form_for @idea_crowdrating do |f| %>
     <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading header">
                <li_header>
                <%= link_to idea_ratings_path(:idea_id => @idea_crowdrating.idea_id) do %>
                  <i class="btn btn-primary glyphicon glyphicon-list"></i>
                <% end %>
                  RATING <%= @idea_crowdrating.idea.header %>
                </li_header>
                </div>
                <div class="panel-body">
                  <% if @idea_crowdrating.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@idea_crowdrating.errors.count, "error") %> prohibited this workorder from being saved:</h2>
                      <ul>
                        <% @idea_crowdrating.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label "Bewertung" %><br/>
                    <div class="form-group">
                      <input id="ex2" data-slider-id='ex2Slider' type="text" data-slider-min="0" data-slider-max="5" data-slider-step="1" data-slider-value="<%= @idea_crowdrating.rating %>"/>
                    </div>
                  </div>
                  <div class="form-group">
                    <%= f.label "Kommentar" %><br/>
                    <%= f.text_area :rating_text, rows: 5, class:"form-control"%>
                  </div>
                      <%= f.hidden_field :user_id, class:"form-control" %>
                      <%= f.hidden_field :idea_id, class:"form-control" %>
                      <%= f.number_field :rating, :id => "rating", class:"form-control hidden"%>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit "Speichern", class:"btn btn-primary btn-lg"%>
            </div>
        </div>
      </div>
    </div>
  <% end %>

<script>
$("#ex2").slider({});
$("#ex2").on("slide", function(slideEvt) {
	$("#rating").val(slideEvt.value);
	init_map(slideEvt.value)
});
</script>

<script>
  document.addEventListener("turbolinks:load", function() {})
</script>