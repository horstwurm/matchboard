    <%= form_for @mcalendar do |f| %>

        <% if @mcalendar.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@mcalendar.errors.count, "error") %> prohibited this calender from being saved:</h2>
              <ul>
                  <% @mcalendar.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-6">
                <div class="panel-body ueberschrift">
                    <%= header((I18n.t :reservation) + " " + @mcalendar.mobject.name) %>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel-body ueberschrift">
                    <div class="form-group">
                      <%= f.label "Datum von" %><br/>
                      <%= f.text_field :date_from, class:"form-control"%>
                      <%= f.label "Uhrzeit von" %><br/>
                      <%= f.number_field :time_from, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Datum_bis" %><br/>
                      <%= f.text_field :date_to, class:"form-control"%>
                      <%= f.label "Uhrzeit bis" %><br/>
                      <%= f.number_field :time_to, class:"form-control"%>
                    </div>
                   <%= f.hidden_field :mobject_id, class:"form-control" %>
                   <%= f.hidden_field :user_id, class:"form-control" %>
                   <%= f.hidden_field :company_id, class:"form-control" %>
                   <%= f.hidden_field :active, class:"form-control" %>
                    <div class="actions">
                       <%= f.submit "Speichern",  class:"btn btn-primary btn-lg btn-submit"%>
                      <%= link_to mobject_path(:id => @mcalendar.mobject_id, :topic => "objekte_kalendervermietungen") do %>
                        <i class="btn btn-primary btn-lg btn-submit">Abbrechen</i>
                      <% end %>
                    </div>
                </div>
                
            </div>
        </div>
    <% end %>                

<script type="text/javascript">
  $(document).ready(function(){
    $('#mcalendar_date_from').datepicker({
        format: "yyyy-mm-dd",
        weekStart: 1,
        language: "de",
        daysOfWeekHighlighted: "0,6",
        todayBtn: true,
        todayHighlight: true,
        firstDay: 1}
    );
    $('#mcalendar_date_to').datepicker({
        format: "yyyy-mm-dd",
        weekStart: 1,
        language: "de",
        daysOfWeekHighlighted: "0,6",
        todayBtn: true,
        todayHighlight: true,
        firstDay: 1}
    );
  });
</script>

<script>
  document.addEventListener("turbolinks:load", function() {datepicker()})
</script>
