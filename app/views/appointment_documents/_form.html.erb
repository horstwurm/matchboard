
  <%= form_for @appointment_document, html: {multipart: true}  do |f| %>
     <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading header">
                <li_header>
                <%= link_to user_path(:id => @appointment_document.appointment.user_id1, :topic => "Kalendereintraege") do %>
                  <i class="btn btn-primary fa fa-list"></i>
                <% end %>
                  DOKUMENTE Termin <%= @appointment_document.name %>
                </li_header>
                </div>
                <div class="panel-body">
                  <% if @appointment_document.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@appointment_document.errors.count, "error") %> prohibited this workorder from being saved:</h2>
                      <ul>
                        <% @appointment_document.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label "Bezeichnung" %><br/>
                    <%= f.text_field :name, autofocus: true, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <%= f.label "Beschreibung" %><br/>
                    <%= f.text_area :description, rows: 5, class:"form-control"%>
                  </div>
                  <div class="form-group">
                     <%= f.label "Dokument " + @appointment_document.document_file_name.to_s %><br/>
                  </div>
                  <div class="form-group">
                     <%= f.file_field :document, class:"form-control" %>
                  </div>
                  <div>
                      <%= f.hidden_field :appointment_id, class:"form-control" %>
                  </div>
                </div>
            </div>
        </div>
     </div>
     <div class="row">
        <div class="col-md-6">
            <div class="actions">
              <%= f.submit "Speichern", class:"btn btn-primary btn-lg"%>
            </div>
        </div>
      </div>
    </div>
  <% end %>
