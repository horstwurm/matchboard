  <%= form_for @idea, html: {multipart: true}  do |f| %>

  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") + " " + (I18n.t :notsaved) %></h2>
      <ul>
        <% @idea.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
      <div class="col-md-6">
          <div class="panel-body ueberschrift">
              <h1><%= (I18n.t :idea) + " " + @idea.mobject.name %></h1> 
          </div>
      </div>
      <div class="col-md-6">
          <div class="panel panel-body ueberschrift">
            <div class="form-group">
              <%= f.label (I18n.t :bezeichnung) %>
              <%= f.text_field :header, autofocus: true, class:"form-control"%>
            </div>
            <div class="form-group">
              <%= f.label (I18n.t :beschreibung) %>
              <%= f.text_area :description, rows: 5, class:"form-control"%>
            </div>
            <div class="form-group">
               <%= f.label (I18n.t :picture) + " " +  @idea.avatar_file_name.to_s %>
               <%= image_tag @idea.avatar.url(:medium) if @idea.avatar_file_name %>
            </div>
            <div class="form-group">
               <%= f.file_field :avatar, class:"form-control" %>
            </div>
            <br>
            <div class="form-group">
               <%= f.label (I18n.t :dokument) + " " + @idea.document_file_name.to_s %>
            </div>
            <div class="form-group">
               <%= f.file_field :document, class:"form-control" %>
            </div>
            <div class="actions">
                <%= f.submit "Speichern", class:"btn btn-primary btn-lg btn-submit"%>
                <%= link_to mobject_path(:id => @idea.mobject_id, :topic => "objekte_ideen") do %>
                  <i class="btn btn-default btn-lg btn-submit">Abbrechen</i>
                <% end %>
            </div>
            <%= f.hidden_field :mobject_id, class:"form-control" %>
            <%= f.hidden_field :user_id, class:"form-control" %>
            <%= f.hidden_field :rating, class:"form-control" %>
            <%= f.hidden_field :crowdrating, class:"form-control" %>
          </div>
      </div>
   </div>
<% end %>

<script>
  document.addEventListener("turbolinks:load", function() {})
</script>
