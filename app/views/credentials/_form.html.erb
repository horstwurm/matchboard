    <%= form_for @credential do |f| %>

        <% if @credential.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@credential.errors.count, "error") %> prohibited this category from being saved:</h2>
              <ul>
                  <% @credential.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-12">
                    <div class="panel-heading header">
                      <li_header>
                      <%= link_to credentials_path(:ctype => @mcategory.ctype) do %>
                        <i class="btn btn-primary fa fa-list"></i>
                      <% end %>
                      PARAMETER Zugriff
                      </li_header>
                    </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel-body">
                    <div class="form-group">
                       <%= f.label "Funktion" %><br/>
                       <%= f.text_field :scope, class:"form-control"%>
                    </div>
                    <div class="form-group">
                          <input type="checkbox" name="my-checkbox1" checked>
                          <%= f.label "Aktiviert" %>
                    </div>
                    <%= f.check_box :access, :id => "access", class:"form-control hidden" %>
                    <%= f.hidden_field :user_id %>
                    <div class="actions">
                      <%= f.submit "Speichern", class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
            </div>
        </div>
    <% end %>

<script>
    $.fn.bootstrapSwitch.defaults.onColor = 'success';
    $("[name='my-checkbox1']").bootstrapSwitch('state',<%= @credential.access %>);
    $("[name='my-checkbox1']").on('switchChange.bootstrapSwitch', function () {
    $("#access").prop('checked',$("[name='my-checkbox1']").bootstrapSwitch('state'));
    });
</script>
