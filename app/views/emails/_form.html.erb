
    <%= form_for @email do |f| %>

        <% if @email.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@email.errors.count, "error") %> prohibited this calender from being saved:</h2>
              <ul>
                  <% @email.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
            </div>
        <% end %>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading header">
                      <li_header>
                      <%= link_to @email.back_url do %>
                        <i class="btn btn-primary btn-lg fa fa-list"></i>
                      <% end %>
                      <% @m_from = User.find(@email.m_from) %>
                      <% @m_to = User.find(@email.m_to) %>
                      eMail an <%= @m_to.name + " " + @m_to.lastname + " von " + @m_from.name + " " + @m_from.lastname  %>
                      </li_header>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="panel-body">
                    <div class="form-group">
                      <%= f.label "Betreff" %><br/>
                      <%= f.text_field :header, class:"form-control"%>
                    </div>
                    <div class="form-group">
                      <%= f.label "Nachricht" %><br/>
                      <%= f.text_area :body, rows:5, class:"form-control"%>
                    </div>
                     <%= f.hidden_field :m_to, class:"form-control" %>
                     <%= f.hidden_field :m_from, class:"form-control" %>
                     <%= f.hidden_field :status, class:"form-control" %>
                     <%= f.hidden_field :back_url, class:"form-control" %>
                     <div class="actions">
                       <%= f.submit "Senden",  class:"btn btn-primary btn-lg"%>
                    </div>
                </div>
                
            </div>
        </div>
    <% end %>                


<script type="text/javascript">
   var my_email= "my@email.com"
   $(document).ready(function(){
        $("#header").val(my_email);
   });
</script>

