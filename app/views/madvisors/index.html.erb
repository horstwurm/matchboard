
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <div class="digg_pagination">
            <% case @mobject.mtype %>
            <% when "angebote" %>
              <%= link_to(mobject_path(:id => @mobject.id, :topic => "objekte_ansprechpartner")) do %>
                <i class="btn btn-primary glyphicon glyphicon-list"></i>
              <% end %>
            <% when "projekte" %>
              <%= link_to(mobject_path(:id => @mobject.id, :topic => "objekte_projektberechtigungen")) do %>
                <i class="btn btn-primary glyphicon glyphicon-list"></i>
              <% end %>
            <% when "gruppen" %>
              <%= link_to(mobject_path(:id => @mobject.id, :topic => "objekte_gruppenmitglieder")) do %>
                <i class="btn btn-primary glyphicon glyphicon-list"></i>
              <% end %>
            <% when "innovationswettbewerbe" %>
              <%= link_to(mobject_path(:id => @mobject.id, :topic => "objekte_jury")) do %>
                <i class="btn btn-primary glyphicon glyphicon-list"></i>
              <% end %>
            <% end %>
            <%= will_paginate @users, :container => false, previous_label: "<", next_label: ">" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
      <% case @mobject.mtype %>
        <% when "angebote" %>
          <%= header((I18n.t :ansprechpartner) + " " + @mobject.name + "<span class='badge'>" + @adpanz.to_s + "</span>", true) %>
        <% when "projekte" %>
          <%= header((I18n.t :projektberechtigungen) + " " + @mobject.name + "<span class='badge'>" + @adpanz.to_s + "</span>", true) %>
        <% when "gruppen" %>
          <%= header((I18n.t :gruppenmitglieder)  + " " + @mobject.name + "<span class='badge'>" + @adpanz.to_s + "</span>", true) %>
        <% when "innovationswettbewerbe" %>
          <%= header((I18n.t :jury) + " " + @mobject.name + "<span class='badge'>" + @adpanz.to_s + "</span>", true) %>
      <% end %>
  </div>
  
	<div class="row">
    <div class="col-md-12">
  		<table class="table table-striped">
        <thead>
          <tr>
            <th colspan=2><%= (I18n.t :status) %></th>
            <th colspan=3><%= (I18n.t :personen) %></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
            <tr>
              <td>
                <% found = false %>
                <% grade = nil %>
                <% for i in 0..@array.length-1 %>
                  <% if @array[i]["key"].to_i == u.id %>
                    <% found = true %>
                    <% grade = @array[i]["grade"] %>
                  <% end %>
                <% end %>
                <% case @mobject.mtype %>
                  <% when "angebote" %>
                    <%= link_to madvisors_path :senior_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id do %>
                      <i class="btn btn-primary glyphicon glyphicon-tags"></i>
                    <% end %>
                    <%= link_to madvisors_path :madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id do %>
                      <i class="btn btn-primary glyphicon glyphicon-tag"></i>
                    <% end %>
                    <% if grade %>
                      <%= link_to madvisors_path :delete_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id do %>
                        <i class="btn btn-danger glyphicon glyphicon-remove-sign"></i>
                      <% end %>
                    <% end %>
                  <% when "projekte" %>
                    <% if !grade %>
                      <%= link_to madvisors_path :senior_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id  do %>
                        <i class="btn btn-primary glyphicon glyphicon-king"></i>
                      <% end %>
                      <%= link_to madvisors_path :madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id  do %>
                        <i class="btn btn-primary glyphicon glyphicon-pawn"></i>
                      <% end %>
                    <% else %>
                      <%= link_to madvisors_path :delete_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id do %>
                        <i class="btn btn-danger glyphicon glyphicon-remove-sign"></i>
                      <% end %>
                    <% end %>
                  <% when "gruppen" %>
                    <% if !grade %>
                      <% if false %>
                      <%= link_to madvisors_path :senior_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id  do %>
                        <i class="btn btn-primary glyphicon glyphicon-king"></i>
                      <% end %>
                      <% end %>
                      <%= link_to madvisors_path :madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id  do %>
                        <i class="btn btn-primary glyphicon glyphicon-pawn"></i>
                      <% end %>
                    <% else %>
                      <%= link_to madvisors_path :delete_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id do %>
                        <i class="btn btn-danger glyphicon glyphicon-remove-sign"></i>
                      <% end %>
                    <% end %>
                  <% when "innovationswettbewerbe" %>
                    <% if !grade %>
                      <%= link_to madvisors_path :senior_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id  do %>
                        <i class="btn btn-primary glyphicon glyphicon-king"></i>
                      <% end %>
                      <%= link_to madvisors_path :madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id  do %>
                        <i class="btn btn-primary glyphicon glyphicon-pawn"></i>
                      <% end %>
                    <% else %>
                      <%= link_to madvisors_path :delete_madvisor_id => u.id, :page => session[:page], :mobject_id => @mobject.id do %>
                        <i class="btn btn-danger glyphicon glyphicon-remove-sign"></i>
                      <% end %>
                    <% end %>
                <% end %>
              </td>
              <td>
                <% if grade %>
                    <berater><%= grade %></berater>
                <% end %>
              </td>
              <td>
                <%= showImage2(:small, u, true) %>
              </td>
              <td>
                <%= u.name + " " + u.lastname %>            
              </td>
              <td>
                <%= u.email %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
